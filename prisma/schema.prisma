generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Payment {
  id              String   @id @default(cuid())
  amount          Int
  currency        String
  status          String
  stripeSessionId String   @unique
  customerEmail   String?
  createdAt       DateTime @default(now())
}
